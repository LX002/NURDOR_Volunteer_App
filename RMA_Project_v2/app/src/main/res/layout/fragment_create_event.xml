<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.CreateEventFragment" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/event_name_with_colon"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/enter_event_name"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/event_description_with_colon"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtEventDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="top|start"
            android:hint="@string/enter_description"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:minLines="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/startDateContainer">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/start_date_with_colon"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnStartDate"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/pick" />

            <EditText
                android:id="@+id/editTxtStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/startTimeContainer">
            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/start_time_w_colon"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnStartTime"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/pick" />

            <EditText
                android:id="@+id/editTxtStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/endDateContainer">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/end_date_w_colon"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEndDate"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/pick" />

            <EditText
                android:id="@+id/editTxtEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/endTimeContainer">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/end_time_w_colon"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEndTime"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/pick" />

            <EditText
                android:id="@+id/editTxtEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pickImageContainer">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/pick_image_w_colon"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickImg"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/pick" />

            <EditText
                android:id="@+id/editTxtImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pickLocationContainer">
            <TextView
                android:id="@+id/textView14"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/location_with_colon"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickLocation"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/pick" />

            <EditText
                android:id="@+id/editTxtLocationDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pickCityContainer">
            <TextView
                android:id="@+id/textView15"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/city_w_colon"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinnerCity"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_event"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>