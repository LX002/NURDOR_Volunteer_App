<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NurdorApp_DayNight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="colorPrimary">@color/nurdor_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryContainer">@color/nurdor_green</item>
        <item name="android:colorControlActivated">@color/nurdor_green</item>
        <item name="android:colorControlNormal">@color/almost_black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:popupMenuStyle">@style/Menu_Dark_1</item>
        <item name="spinnerStyle">@style/Spinner_Dark</item>
        <item name="cardViewStyle">@style/CardView_Dark_1</item>
        <item name="android:textViewStyle">@style/TextView_Dark</item>
        <item name="editTextStyle">@style/EditText_Dark</item>
        <item name="imageButtonStyle">@style/ImageButton_Dark</item>
    </style>

    <style name="FrameLayout_DayNight">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ImageButton_Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Menu_Dark_1" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/almost_black</item>
    </style>

    <style name="CardView_Dark_1" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/almost_black</item>
    </style>

    <style name="CardView_Selected_1" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/selection_color_1</item>
        <item name="color">@color/almost_blacker</item>
    </style>

    <style name="Spinner_Dark" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/almost_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/spinner_background_dark</item>
    </style>

    <style name="EditText_Dark" parent="Widget.AppCompat.EditText">
        <item name="color">@color/white</item>
    </style>

    <style name="TextView_Dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Selected" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/almost_blacker</item>
    </style>

    <style name="DialogToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>